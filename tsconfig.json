{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "es5",
            "es2018",
            "dom"
        ],

        "allowJs": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,

        "sourceMap": false,
        "outDir": "./",
        "rootDir": "./",
    },
    "include": [
        "*.ts",
    ],
    "exclude": [
        "node_modules",
    ]
}